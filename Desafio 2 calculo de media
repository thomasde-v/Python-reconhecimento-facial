def calcular_media():
    
    nome = input("Digite o nome do estudante: ")
    
    nota1 = float(input("Digite a primeira nota de avaliação: "))

    nota2 = float(input("Digite a segunda nota de avaliação: "))

    media = (nota1 + nota2) / 2

    print( nome, "sua primeira nota foi" ,nota1,
                 "\nsua segunda nota foi" ,nota2,
                 "\nsua media foi", media)

calcular_media()
